<p id="notice"><%= notice %></p>

<h1>Listing Game Sessions</h1>

<table>
  <thead>
    <tr>
      <th>Creator</th>
      <th>Game</th>
      <th>Game mode</th>
      <th>Notes</th>
      <th>Game Date</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @game_sessions.each do |game_session| %>
      <tr>
        <td><%= game_session.user.user_name %></td>
        <td>
          <% game_session.games.each do |game| %>
            <%= game.title.titleize %>
          <% end %>
        </td>
        <td>
          <% game_session.game_modes.each do |game_mode| %>
            <%= game_mode.title %>
          <% end %>
        </td>
        <td>
          <%= game_session.notes %>
        </td>
        <td>
          <%= local_date(game_session.game_date, '%B %e') %>
        </td>
        <td>
          <%= local_time(game_session.start_time, '%l:%M%P') %>
        </td>
        <td>
          <%= local_time(game_session.end_time, '%l:%M%P') %>
        </td>
        <td><%= link_to 'Show', game_session %></td>
        <td><%= link_to 'Edit', edit_game_session_path(game_session) %></td>
        <td><%= link_to 'Destroy', game_session, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

