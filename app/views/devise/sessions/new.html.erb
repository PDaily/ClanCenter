<div class="ten wide centered column login">
  <div class="ui attached message">
      <div class="header">
        Log-in
      </div>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "ui form attached fluid segment"}) do |f| %>
    <div class="required field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="required field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="ui field slider checkbox">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <%= f.submit "Log in", class: "ui green right floated button" %>
  <% end %>
  <div class="ui bottom attached warning message">
    <i class="icon help"></i>
    Don't have an account? <a href="/users/sign_up">Sign Up</a> here instead.
  </div>
</div>
