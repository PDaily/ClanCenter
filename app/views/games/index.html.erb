<div class="twelve wide centered column">
  <div class="ui green attached segment">
    <h2 class="ui header">
      <i class="game icon"></i>
      <div class="content">Games</div>
    </h2>
  </div>
  <div class="ui attached segment">
    <div class="ui divided items">
      
      <% @games.each do |game| %>
      <div class="item">
        <div class="image">
          <%= image_tag game.game_icon.url(:medium) %>
        </div>
        
        <div class="content">
          <h3><%= link_to game.title, game_url(game) %></h3>
          <div class="description">
            <p><%= game.description %></p>
          </div>
          
          <div class="extra">
            <h4>Game Modes:</h4>
            <% game.game_modes.each do |game_mode| %>
              <div class="ui small teal label"><%= game_mode.title %></div>
            <% end %>
          </div>
        </div>
      </div>
      <% end %>
      
    </div>
  </div>
</div>